<!-- components/video/videoCmp.wxml -->
<view class="container">
    <view>
        <video class="video" 
               hidden="{{!showPoster}}" 
               src="{{src}}" 
               id="{{videoId}}"
               bindended = "onVideoEnd"></video>
        <view class="poster-container" hidden="{{showPoster}}">
            <image class="poster" src="{{poster}}" />
            <view class="controler" catch:tap="onPlay">
                <image class="play-btn" src="image/bofang.png" />
                <text class="duration">{{duration}}</text>
            </view>
        </view>
    </view>
    <view class="main-title">
        <text>{{mainTitle}}</text>
    </view>
    <view class="mask" catch:tap="onMaskTap" hidden="{{!showPoster}}"></view>
</view>