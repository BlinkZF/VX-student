page {
  background-color: rgb(243, 247, 215);
}

.container {
  position: relative;
}

.title-container {
  padding: 20rpx 0rpx 0rpx 10rpx;
  display: block;
  text-align: center;
  font-size: 50rpx;
}

.media-container {
  padding: 20rpx;
  height: 400rpx;
  /* display: flex;
  justify-content: center; */
}

.media-container .chengDuImage {
  width: 100%;
  height: 400rpx;
}

.media-container video {
  align-items: center;
  width: 100%;
}

.media-container .media-swiper {
  height: 400rpx;
}

.media-container image {
  width: 100%;
  height: 100%;
}

.read-container,
.authorAndDate text {
  padding: 0px 10rpx;
  font-size: 30rpx;
  color: #999;
}

.contant-container {
  display: flex;
  padding: 20rpx;
  flex-direction: column;
  align-items: center;
}

.contant-container text {
  font-size: 30rpx;
  text-indent: 2em;
  line-height: 60rpx;
}

/* 音乐播放器样式 */
.audio-container {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #fdfdfd;
  border: 1rpx solid #f2f2f2;
  border-radius: 4rpx;
  position: relative;
}

.audio-controler {
  margin-right: 40rpx;
}

.audio-controler image {
  width: 80rpx;
  height: 80rpx;
}

.audio-title {
  position: absolute;
  top: 10rpx;
  left: 150rpx;
  display: block;
}

.audio-title text {
  font-size: 36rpx;
}

.audio-from text {

  font-size: 28rpx;
  color: #666;
}

.audio-progress {
  position: absolute;
  margin-top: 30rpx;
  left: 150rpx;
  width: 500rpx;
}

.progress-circle {
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #00b26a;
}

.audio-time {
  width: 500rpx;
  position: absolute;
  display: flex;
  justify-content: space-between;
  bottom: 0rpx;
  right: 15rpx;
}

.audio-time {
  color: #666;
  font-size: 24rpx;
}