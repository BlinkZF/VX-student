}

.container {
  position: relative;
}

.title-container {
  padding: 20rpx 0rpx 0rpx 10rpx;
  display: block;
  text-align: center;
  font-size: 50rpx;
}

.media-container {
  padding: 20rpx;
  height: 400rpx;
}

.media-container swiper {
  height: 400rpx;
}

.media-container image {
  width: 100%;
  height: 100%;
}

