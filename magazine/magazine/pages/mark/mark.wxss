/* pages/mark/mark.wxss */
.uesrContainer{
    display: flex;
    flex-direction: column;
    padding: 0 30rpx;
    background-color: #fff;
}
.userInfo{
    display: flex;
    justify-content: space-between;
    margin-bottom: 50rpx;
}

.userName{
    font-size: 40rpx;
}
.userAvater{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
}

.userAvater image{
    width: 100rpx;
    height: 100rpx;
}
.share{
    width: 50rpx;
    height: 50rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
.share image{
    width: 50rpx;
    height: 50rpx;
}
.butten{
    padding: 0;
    border: 0;
}