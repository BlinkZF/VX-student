.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color:#fff 

}
.bigTitle{
    position: relative;
    font-size: 52rpx;
    padding-bottom: 24rpx;
    letter-spacing: 10rpx;
}
.bigTitle::after{
    position: absolute;
    left: 50%;
    bottom: 0;
    margin-left: -57rpx;
    width: 114rpx;
    height: 4rpx;
    background-color: #999;
    content:''
}
.title{
    width: 700rpx;
    text-align: center;
    margin-top: 24rpx;
    font-size: 28rpx;
}
.image, .skeleton{
    margin-top: 50rpx;
    margin-bottom: 20rpx;
    width: 700rpx;
    height: 750rpx;
    position: relative;
}
.skeleton{
    background-color: #999
}
.loader{
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -20rpx;
    margin-left: -20rpx;
    width: 40rpx;
    height: 40rpx;
    border: 10rpx solid #ffffff;
    border-bottom-color: transparent;
    border-radius: 50%;
    animation: 1s loader linear infinite;
}
@keyframes loader{
    0% {
        transform: rotate(0deg)
    }
    100%{
        transform: rotate(360deg) 
    }
}
.add{
    margin-right: 20rpx
}
.toCat{
    display: inline-block;
    border: 1rpx solid #000;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
}




